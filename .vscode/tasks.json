{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"presentation": {
				"panel": "dedicated",
				"focus": true,
				"reveal": "silent",
				"showReuseMessage": false,
			},
			"problemMatcher": ["$rgbdserror", "$rgbdslinkerror"],
			"runOptions": {
				"runOn": "folderOpen",
			}
		},
	],
}
